<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:id="@+id/SplashScreen"
    android:background="#03859d"
    tools:context="com.example.ardi.pantheon.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:text="PORTAL"
        android:textSize="45dp"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:background="#03859d"
        android:textColor="#fff"
        android:textStyle="bold"
        android:id="@+id/textView" />

    <ImageView
        android:id="@+id/txte"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="39dp"
        android:background="#03859d"
        android:src="@drawable/splash" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/txte"
        android:text="Troubleshoot PC"
        android:textSize="30dp"
        android:textColor="#fff"
        android:gravity="center"
        android:layout_marginTop="30dp"
        />

    <ProgressBar
        android:id="@+id/progresBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:theme="@style/ProgressPutih"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:text="Pantheon Developers"
        android:textSize="19dp"
        android:textColor="#fff"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:textStyle="italic"
        />




</LinearLayout>