<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ardi.pantheon.MenuActivity">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#006064"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#006064">

        <ImageButton
            android:id="@+id/menu1"
            android:onClick="men1"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#607D8B"
            android:src="@drawable/carieror"
            android:scaleType="fitStart"
            android:padding="7dp"
            />


        <ImageButton
            android:id="@+id/menu2"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_below="@id/menu1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#607D8B"
            android:src="@drawable/installos"
            android:scaleType="fitStart"
            android:padding="7dp"
            android:onClick="men2"
            />



        <ImageButton
            android:id="@+id/menu3"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_below="@id/menu2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#607D8B"
            android:src="@drawable/installsoftware"
            android:scaleType="fitStart"
            android:padding="7dp"
            android:onClick="men3"
            />

        <ImageButton
            android:id="@+id/menu4"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_below="@id/menu3"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#607D8B"
            android:src="@drawable/tentangkami"
            android:scaleType="fitStart"
            android:padding="7dp"
            android:onClick="men4"
            />

    </RelativeLayout>
</ScrollView>

</LinearLayout>
